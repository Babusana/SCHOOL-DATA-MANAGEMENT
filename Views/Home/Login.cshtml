<head>
    <link rel="stylesheet" href="~/css/Login.css">
    <!-- Option 1: Include in HTML -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body>
    <div id="login-page">
        <div class="login">
            <h1 class="login-title"> Admin Login</h1>
            <p class="notice">Please login to access the system</p>
            <form class="form-login" asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="Username">Username</label>
                <div class="input-email field">
                    <i class="bi bi-person"></i>
                    <input asp-for="Username" placeholder="Enter your Username" required>
                </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                <label asp-for="Password">Password</label>
                <div class="input-password field">
                    <i class="bi bi-key"></i>
                    <input asp-for="Password" placeholder="Enter your password" required>
                </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                <span class="text-danger">@msg</span>
                <button type="submit">
                    <i class="bi bi-lock"></i> Sign in</button>
            </form>
        </div>
        <div class="background">
            <h1>Login to get access to all actions......</h1>
        </div>
    </div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
